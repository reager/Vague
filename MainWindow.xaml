<Window x:Class="PrivacyFilter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PrivacyFilter"
        mc:Ignorable="d"
        Title="Privacy Filter" Height="900" Width="1600" MinHeight="800" MinWidth="1400"
        Icon="pack://application:,,,/gfx/icon.png"
        WindowStartupLocation="CenterScreen"
        Background="#2b2b2b">
    
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#4a4a4a"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#666666"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        
        <Style TargetType="ListView">
            <Setter Property="Background" Value="#3c3c3c"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#666666"/>
        </Style>

        <Style TargetType="ListViewItem">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#4a4a4a"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#3a6ea5"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
                <MultiTrigger>
                    <MultiTrigger.Conditions>
                        <Condition Property="IsSelected" Value="True"/>
                        <Condition Property="IsMouseOver" Value="True"/>
                    </MultiTrigger.Conditions>
                    <Setter Property="Background" Value="#2f5c8a"/>
                    <Setter Property="Foreground" Value="White"/>
                </MultiTrigger>
            </Style.Triggers>
        </Style>
        
        <Style TargetType="Label">
            <Setter Property="Foreground" Value="White"/>
        </Style>
        
        <Style TargetType="Slider">
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </Window.Resources>
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!-- Header -->
        <DockPanel Grid.Row="0" Grid.ColumnSpan="2" Margin="0,0,0,10">
            <Button DockPanel.Dock="Right" Content="Restart as Administrator" Click="RestartAsAdmin_Click"/>
            <Label Content="Privacy Filter - Window Blur Manager" 
                   FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
        </DockPanel>
        
        <!-- Running Processes -->
        <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,5,0">
            <DockPanel Margin="0,0,0,5">
                <Button DockPanel.Dock="Right" Content="Refresh" Click="Refresh_Click"/>
                <Label Content="Running Processes" FontWeight="Bold"/>
            </DockPanel>
            <ListView x:Name="ProcessesList" ItemsSource="{Binding Processes}" 
                     SelectedItem="{Binding SelectedProcess}" Height="400" MouseDoubleClick="ProcessesList_MouseDoubleClick">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Process Name" DisplayMemberBinding="{Binding Name}"/>
                        <GridViewColumn Header="Window Title" DisplayMemberBinding="{Binding MainWindowTitle}" Width="420"/>
                        <GridViewColumn Header="PID" DisplayMemberBinding="{Binding Id}"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </StackPanel>
        
        <!-- Private Processes -->
        <StackPanel Grid.Row="1" Grid.Column="1" Margin="5,0,0,0">
            <Label Content="Private Processes" FontWeight="Bold" Margin="0,0,0,5"/>
            <ListView x:Name="PrivateProcessesList" ItemsSource="{Binding PrivateProcesses}" 
                     SelectedItem="{Binding SelectedPrivateProcess}" Height="400" MouseDoubleClick="PrivateProcessesList_MouseDoubleClick">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Process Name" DisplayMemberBinding="{Binding Name}"/>
                        <GridViewColumn Header="Current Title" DisplayMemberBinding="{Binding CurrentWindowTitle}" Width="420"/>
                        <GridViewColumn Header="Blur" Width="140">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <DockPanel LastChildFill="False">
                                        <Button Content="-" Width="26" Height="22" Click="BlurDecrement_Click"/>
                                        <TextBox Width="60" Height="22" Margin="6,0" Text="{Binding BlurLevel}" 
                                                 VerticalContentAlignment="Center"
                                                 LostFocus="BlurTextBox_LostFocus"
                                                 KeyDown="BlurTextBox_KeyDown"/>
                                        <Button Content="+" Width="26" Height="22" Click="BlurIncrement_Click"/>
                                    </DockPanel>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Status" DisplayMemberBinding="{Binding IsActive, Converter={StaticResource BoolToStatusConverter}}"/>
                        <GridViewColumn Header="Auto-Unblur" Width="90">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <CheckBox IsChecked="{Binding AutoUnblurOnFocus, Mode=TwoWay}" 
                                             HorizontalAlignment="Center" 
                                             VerticalAlignment="Center"
                                             Checked="AutoUnblur_Changed"
                                             Unchecked="AutoUnblur_Changed"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
            
            <StackPanel Margin="0,10,0,0">
                <CheckBox Content="Minimize to tray on startup" Foreground="White"
                          IsChecked="{Binding MinimizeToTrayOnStartup, Mode=TwoWay}"
                          Checked="MinimizeToTray_Changed"
                          Unchecked="MinimizeToTray_Changed"
                          Margin="0,0,0,8"/>
            </StackPanel>
        </StackPanel>
        
        <!-- Status Bar -->
        <StatusBar Grid.Row="2" Grid.ColumnSpan="2" Background="#3c3c3c" Foreground="White" Margin="0,10,0,0">
            <StatusBarItem>
                <TextBlock x:Name="StatusText" Text="Ready"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
